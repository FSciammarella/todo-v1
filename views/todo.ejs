<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-do List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="box">
        <div id="heading">
            <h1><%= day %></h1>
        </div>
        <% for(let task of tasks) {%>
        <div class="item">
            <input type="checkbox">
            <p><%= task %></p>
        </div>
        <%}  %>
    </div>
    <form action="/" method="post">


        <div class="box">
            <input type="text" name="newTask" id="newTask" autocomplete="false" placeholder="New Task">
            <button type="submit">+</button>
        </div>
        <div class="box">
            <div class="item">
                <input type="checkbox" class="clear" name="clear">
                <p>Clear List</p>
            </div>
        </div>
    </form>
</body>

</html>